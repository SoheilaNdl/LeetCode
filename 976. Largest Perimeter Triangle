class Solution(object):
    def largestPerimeter(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        nums.sort()
        largest = 0
        for i in range(len(nums)-2):   
            if (((nums[i + 0] + nums[i + 1]) > nums[i + 2])):
                my_sum = nums[i + 0] + nums[i + 1] + nums[i + 2]
                if largest < my_sum:
                    largest = my_sum

        return largest
